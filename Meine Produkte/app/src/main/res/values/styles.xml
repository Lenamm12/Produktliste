<resources>
    <!-- Base application theme. -->
    <!-- Light/Day Mode theme-->
    <style name="DayTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorText</item>

        <item name="background_custom">@color/colorBackground</item>
        <item name="toolbarBackground">@color/colorToolbarBackground</item>
        <item name="textColorPrimary">@color/colorText</item>
        <item name="textColorSecondary">@color/colorTextSecondary</item>
        <item name="textColorAccent">@color/colorAccent</item>
        <item name="cardColor">@color/cardColor</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundNight</item>
        <item name="android:textColorPrimary">@color/colorTextNight</item>

        <item name="background_custom">@color/colorBackgroundNight</item>
        <item name="toolbarBackground">@color/colorToolbarBackgroundNight</item>
        <item name="textColorPrimary">@color/colorTextNight</item>
        <item name="textColorSecondary">@color/colorTextSecondaryNight</item>
        <item name="textColorAccent">@color/colorAccent</item>
        <item name="cardColor">@color/cardColorNight</item>

    </style>


    <style name="DayThemeToolbar" parent="DayTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorText</item>

        <item name="background_custom">@color/colorBackground</item>
        <item name="toolbarBackground">@color/colorToolbarBackground</item>
        <item name="textColorPrimary">@color/colorText</item>
        <item name="textColorSecondary">@color/colorTextSecondary</item>
        <item name="textColorAccent">@color/colorAccent</item>
        <item name="cardColor">@color/cardColor</item>
    </style>

    <style name="NightThemeToolbar" parent="DayTheme">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundNight</item>
        <item name="android:textColorPrimary">@color/colorTextNight</item>

        <item name="background_custom">@color/colorBackgroundNight</item>
        <item name="toolbarBackground">@color/colorToolbarBackgroundNight</item>
        <item name="textColorPrimary">@color/colorTextNight</item>
        <item name="textColorSecondary">@color/colorTextSecondaryNight</item>
        <item name="textColorAccent">@color/colorAccent</item>
        <item name="cardColor">@color/cardColorNight</item>
    </style>




    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorBackground</item>
    </style>

    <style name="slider" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>


</resources>